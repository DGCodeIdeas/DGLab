# =============================================================================
# DGLab PWA - Apache Rewrite Configuration
# =============================================================================
# This file configures URL rewriting for the MVC framework.
# All requests are routed to index.php for proper handling.
# 
# Compatible with: Apache 2.4+ with mod_rewrite enabled
# Platform: InfinityFree (and most shared hosting providers)
# =============================================================================

# Enable rewrite engine
RewriteEngine On

# Set base directory (adjust if not in root)
# RewriteBase /

# =============================================================================
# SECURITY HEADERS (if mod_headers is available)
# =============================================================================
<IfModule mod_headers.c>
    # Prevent MIME type sniffing
    Header always set X-Content-Type-Options "nosniff"
    
    # Enable XSS protection
    Header always set X-XSS-Protection "1; mode=block"
    
    # Prevent clickjacking
    Header always set X-Frame-Options "SAMEORIGIN"
    
    # Content Security Policy (adjust as needed)
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' cdn.jsdelivr.net; style-src 'self' 'unsafe-inline' cdn.jsdelivr.net fonts.googleapis.com; font-src 'self' fonts.gstatic.com; img-src 'self' data: blob:; connect-src 'self'; media-src 'self'; frame-src 'none';"
    
    # Referrer policy
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# =============================================================================
# COMPRESSION (if mod_deflate is available)
# =============================================================================
<IfModule mod_deflate.c>
    # Compress text-based content types
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css
    AddOutputFilterByType DEFLATE application/javascript application/json
    AddOutputFilterByType DEFLATE application/xml application/xhtml+xml
    AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>

# =============================================================================
# CACHING (if mod_expires is available)
# =============================================================================
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Images
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
    
    # CSS and JavaScript
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"
    
    # Fonts
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    
    # Default
    ExpiresDefault "access plus 1 day"
</IfModule>

# =============================================================================
# URL REWRITING RULES
# =============================================================================

# Rule 1: Skip existing files and directories
# If the request is for an actual file or directory, serve it directly
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Rule 2: Skip assets directory (if accessed directly)
# Assets are served through the asset bundler, but direct access is allowed
RewriteCond %{REQUEST_URI} ^/assets/
RewriteRule ^ - [L]

# Rule 3: Skip storage directory (security - should never be accessed directly)
RewriteCond %{REQUEST_URI} ^/storage/
RewriteRule ^ - [F,L]

# Rule 4: Skip app directory (security - should never be accessed directly)
RewriteCond %{REQUEST_URI} ^/app/
RewriteRule ^ - [F,L]

# Rule 5: Skip config directory (security - should never be accessed directly)
RewriteCond %{REQUEST_URI} ^/config/
RewriteRule ^ - [F,L]

# Rule 6: Skip database directory (security - should never be accessed directly)
RewriteCond %{REQUEST_URI} ^/database/
RewriteRule ^ - [F,L]

# Rule 7: API requests - route to index.php with api flag
RewriteCond %{REQUEST_URI} ^/api/
RewriteRule ^(.*)$ index.php?__route__=$1&__type__=api [QSA,L]

# Rule 8: Tool-specific routes - route to index.php
RewriteCond %{REQUEST_URI} ^/tool/
RewriteRule ^(.*)$ index.php?__route__=$1&__type__=tool [QSA,L]

# Rule 9: All other requests - route to index.php
RewriteRule ^(.*)$ index.php?__route__=$1 [QSA,L]

# =============================================================================
# PHP CONFIGURATION (if running as Apache module)
# =============================================================================
<IfModule mod_php.c>
    # Increase upload limits for chunked file processing
    php_value upload_max_filesize 64M
    php_value post_max_size 64M
    php_value max_execution_time 300
    php_value max_input_time 300
    php_value memory_limit 256M
    
    # Enable output buffering
    php_value output_buffering 4096
</IfModule>

# =============================================================================
# DIRECTORY INDEXING
# =============================================================================
# Disable directory listing for security
Options -Indexes

# Set default index file
DirectoryIndex index.php index.html

# =============================================================================
# PROTECT SENSITIVE FILES
# =============================================================================
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Protect common sensitive files
<FilesMatch "\.(git|svn|hg|env|log|sql|bak|swp|swo)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Protect composer files
<Files "composer.json">
    Order allow,deny
    Deny from all
</Files>

<Files "composer.lock">
    Order allow,deny
    Deny from all
</Files>
